<div class="container-menu-left">
  <ul class="menu-list">

    <li class="menu-left-item pull-me-filter">Filters</li>
    <div class="panel panel-filter">
      <p><%= "zoznam filtrov" %></p>
    </div>
    <p class="slide"/>


    <li class="menu-left-item pull-me-genre">Genre</li>
    <div class="panel panel-genre">
      <% @genre_list.each do |gen| %>
          <p>
            <label class="checkbox-label"><input type="checkbox" checked="checked" value=""><%= " "+ gen.genre_type %>
            </label></p>
      <% end %>
    </div>
    <p class="slide"/>


    <li class="menu-left-item pull-me-duration">Duration</li>
    <div class="panel panel-duration">
      <p><%= "vyber dlzky filmu" %></p>
    </div>
    <p class="slide"/>


    <li class="menu-left-item pull-me-year">Year</li>
    <div class="panel panel-year">
      <p><%= "vyber roku natocenia filmu" %></p>
    </div>
    <p class="slide"/>


    <li class="menu-left-item pull-me-producent">Producer</li>
    <div class="panel panel-producent">
      <p><%= "zoznam reziserov" %></p>
    </div>
    <p class="slide"/>


    <li class="menu-left-item pull-me-channels">Tv stations</li>
    <div class="panel panel-channels">
      <% @channel_list.each do |ch| %>
          <p>
            <label class="checkbox-label"><input type="checkbox" checked="checked" value=""><%= " "+ ch.name %>
            </label></p>
      <% end %>
    </div>
    <p class="slide"/>
  </ul>
</div>

<div class="container-body">
  <div class="container-days">
    <ul class="day-list">
      <li class="day-item now"><%= link_to 'Now', root_path(program_time: 'now') %></li>
      <!--<li class="day-item today"> %= link_to 'Parse', parse_programs_path, remote: true %> Dnes</li>-->
      <!--<li class="day-item today">Dnes</li>-->
      <!--<li class="day-item"> link_to 'Zajtra', root_path(day: Date.today + 1.day) ><!--<input class="tomorow" onclick="Program.tomorow" type="button" value="--><!--Zajtra</li>-->
      <!--<li class="day-item today">%= link_to 'Dnes', root_path(day: Date.today) %></li>-->
      <li class="day-item today"><%= link_to 'Today', root_path(program_time: 'today') %></li>
      <li class="day-item tomorow"><%= link_to 'Tomorow', root_path(program_time: 'tomorow') %></li>
      <li class="day-item tomorow"><%= link_to 'This week', root_path(program_time: 'week') %></li>
      <li class="day-item tomorow"><%= link_to 'Archive', root_path(program_time: 'archive') %></li>
    </ul>
  </div>


  <div class="programs">
    <table class="table table-condensed">
      <thead>
      <tr>
        <th width="20%">Name</th>
        <th width="5%">Rating</th>
        <th width="5%">Starts at</th>
        <th width="5%">Ends at</th>
        <th width="8%">Date</th>
        <th width="9%">Channel</th>
        <th width="38%">Genre</th>
        <th width="5%">Year</th>
      </tr>
      </thead>

      <tbody>
      <% @programs.each do |p| %>
          <tr>
            <td><%= p.movie.name %></td>
            <td><%= p.movie.rating %></td>
            <td><%= p.scheduled_time_start.strftime("%H:%M") %></td>
            <td><%= p.scheduled_time_end.strftime("%H:%M") %></td>
            <td><%= p.day.strftime("%d.%m.%Y") %></td>
            <td><%= p.channel.name %></td>
            <td>
              <% genres = Array.new %>
              <ul class="list-inline">
                <% p.movie.movie_genres.each do |m_genre| %>
                    <li><%= m_genre.genre.genre_type %></li>
                <% end %>
              </ul>
            </td>
            <td><%= p.movie.year %></td>
          </tr>
      <% end %>
      </table>
  </div>
</div>
